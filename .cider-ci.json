{
  "jobs": {
    "Test": {
      "run-on": [
        {
          "type": "branch",
          "include-match": "^.*$"
        }
      ],
      "context": {
        "tasks": {
          "Unit tests and Coverage": {
            "traits": {
              "nodejs": true
            },
            "environment-variables": {
              "NODE_ENV": "test"
            },
            "tree-attachments": {
              "coverage-lcov": {
                "glob": "coverage/lcov.info",
                "content-type": "text/plain"
              },
              "coverage-json": {
                "glob": "coverage/coverage.json",
                "content-type": "application/json"
              }
            },
            "trial-attachments": {
              "tap": {
                "glob": "tap.log",
                "content-type": "text/plain"
              }
            },
            "scripts": {
              "npm_install": {
                "body": "npm install --ignore-scripts"
              },
              "build": {
                "body": "npm run -s build",
                "start-when": [{ "script": "npm_install"}]
              },
              "tests": {
                "body": "npm run -s test",
                "start-when": [{ "script": "build"}]
              },
              "coverage": {
                "body": "npm run -s coverage",
                "start-when": [{ "script": "tests"}]
              }
            }
          }
        }
      }
    }
  }
}
